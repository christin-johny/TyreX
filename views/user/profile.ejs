<%- include("../partials/user/profileHeader") %>

<body>

    <div class="container-fluid">
        <div class="row">
            <!-- Main Content -->
            <main class="col-12 col-md-9 ms-sm-auto col-lg-10 px-2 px-md-4">
                <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                    <h1 class="h2">My Profile</h1>
                </div>

                <div class="row">
                    <div class="col-12">
                        <div class="card shadow-sm mb-4">
                            <div class="card-body">
                                <h4 class="card-title mb-4">Personal Information</h4>
                                
                                <div class="row">
                                    <div class="col-12 col-md-6 mb-3">
                                        <label for="userName" class="form-label">Username</label>
                                        <input type="text" class="form-control w-100" id="name" value="<%=user.name%>" placeholder="Enter username" readonly>
                                    </div>

                                    <div class="col-12 col-md-6 mb-3">
                                        <label for="email" class="form-label">Email</label>
                                        <input type="email" class="form-control w-100" id="email" value="<%=user.email%>" placeholder="Enter email" readonly>
                                    </div>

                                    <div class="col-12 col-md-6 mb-3">
                                        <label for="phone" class="form-label">Phone Number</label>
                                        <input type="tel" class="form-control w-100" id="phone" value="<%=user.phone%>" placeholder="Enter phone number" readonly>
                                    </div>
                                    <div class="col-12 col-md-6 mb-3 mt-md-2">
                                        <%if(user.referralCode){%>
                                            <label for="referralCode" class="form-label">Referral Code</label>
                                            <h5 class="text-success">
                                                <%=user.referralCode%>
                                            </h5>
                                        <%}%>
                                    </div>
                                </div>

                                <div class="d-flex justify-content-end mt-3">
                                    <a href="/editProfile" class="btn btn-primary btn-sm">
                                        <i class="bi bi-pencil-fill me-2"></i>Edit Profile
                                    </a>
                                </div>
                            </div>
                        </div>

                        <div class="card shadow-sm">
                            <div class="card-body">
                                <h4 class="card-title mb-4">Saved Addresses</h4>
                                
                                <% if (userAddress) { %>
                                    <div class="row row-cols-1 row-cols-md-2 g-4">
                                        <% userAddress.address.forEach((addr) => { %>
                                            <div class="col">
                                                <div class="card h-100 border-secondary">
                                                    <div class="card-header bg-transparent border-secondary">
                                                        <h5 class="card-title mb-0"><%= addr.addressType %> Address</h5>
                                                    </div>
                                                    <div class="card-body text-secondary">
                                                        <p class="card-text">
                                                            <strong>Name:</strong> <%= addr.name %><br>
                                                            <strong>Apartment:</strong> <%= addr.apartment %><br>
                                                            <strong>Building:</strong> <%= addr.building %><br>
                                                            <strong>Street:</strong> <%= addr.street %><br>
                                                            <strong>City:</strong> <%= addr.city %><br>
                                                            <strong>Landmark:</strong> <%= addr.landmark %><br>
                                                            <strong>State:</strong> <%= addr.state %><br>
                                                            <strong>Country:</strong> <%= addr.country %><br>
                                                            <strong>ZIP:</strong> <%= addr.zip %><br>
                                                            <strong>Phone:</strong> <%= addr.phone %><br>
                                                            <strong>Alternative Phone:</strong> <%= addr.altPhone %>
                                                        </p>
                                                    </div>
                                                </div>
                                            </div>
                                        <% }) %>
                                    </div>
                                <% } else { %>
                                    <div class="alert alert-info" role="alert">
                                        No addresses found. Please add an address.
                                    </div>
                                <% } %>

                                <div class="d-flex justify-content-end mt-4">
                                    <a href="/addAddress" class="btn btn-success btn-sm">
                                        <i class="bi bi-plus-circle me-2"></i>Add New Address
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </main>
        </div>
    </div>

    <style>
        /* Responsive styles */
        @media (max-width: 767.98px) {
            main {
                padding-left: 10px !important;
                padding-right: 10px !important;
            }
            
            .card-body {
                padding: 1rem;
            }
            
            .h2 {
                font-size: 1.5rem;
            }
            
            .card-title {
                font-size: 1.1rem;
            }
        }
        
        /* Make sure inputs are easy to read on mobile and fully responsive */
        .form-control {
            font-size: 16px;
            width: 100% !important;
            max-width: 100% !important;
            box-sizing: border-box !important;
        }
        
        /* Remove any fixed widths that might be inherited from elsewhere */
        input, select, textarea {
            width: 100% !important;
            max-width: 100% !important;
        }
        
        /* Ensure consistent spacing */
        .card {
            margin-bottom: 1.5rem;
        }
        
        /* Better touch targets on mobile */
        .btn {
            padding: 0.375rem 0.75rem;
        }
        
        /* Ensure the main content takes full width on mobile */
        @media (max-width: 575.98px) {
            .ms-sm-auto {
                margin-left: 0 !important;
            }
            
            .col-lg-10 {
                width: 100% !important;
                max-width: 100% !important;
                flex: 0 0 100% !important;
            }
        }
    </style>
</body>
</html>