      <div class="modal-footer py-2">
        <button type="button" class="btn btn-sm btn-danger" data-bs-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-sm btn-primary" onclick="submitReturn()">Submit Return</button>
      </div>
    </div>
  </div>
