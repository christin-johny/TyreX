<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>TyreX Home</title>
  <link rel="icon" type="image/svg" sizes="20x20" href="/img/favicon.svg">
  <!-- CSS Libraries -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
  <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Roboto:wght@300;400;500;700;900&display=swap" />
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.4.0/mdb.min.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
  
  <!-- Navbar Styles -->
  <style>
    .no-style {
      all: unset; 
      cursor: pointer; 
      display: inline-block; 
    }
    
    .custom-carousel-btn {
      position: absolute;
      top: 50%;
      transform: translateY(-50%);
      z-index: 10;
      width: 40px;
      height: 40px;
      background-color: rgba(87, 87, 87, 0.5);
      border: none;
      border-radius: 50%;
      cursor: pointer;
      display: flex;
      align-items: center;
      justify-content: center;
    }
    
    .custom-carousel-btn-prev {
      left: 10px;
    }
    
    .custom-carousel-btn-next {
      right: 10px;
    }
    
    .custom-carousel-btn i {
      color: white;
      font-size: 18px;
    }
    
    .custom-img {
      width: 100%;
      height: auto;
      aspect-ratio: 3 / 1; 
      object-fit: contain;
    }
    
    .modal {
      z-index: 1050 !important;
    }
    
    .modal-backdrop {
      z-index: 1040 !important;
    }
    
    /* Custom navbar styles */
    .navbar-toggler {
      border: none;
      padding: 0.5rem;
      transition: all 0.3s ease;
      outline: none;
      border-radius: 0.25rem;
      background-color: #f8f9fa;
    }
    
    .navbar-toggler:focus {
      box-shadow: 0 0 0 0.15rem rgba(220, 53, 69, 0.25);
    }
    
    .navbar-toggler .fas {
      color: #dc3545;
    }
    
    @media (max-width: 991.98px) {
      .navbar .navbar-collapse {
        margin-top: 1rem;
        padding: 1rem;
        border-radius: 0.5rem;
        background-color: #f8f9fa;
      }
      
      .navbar-nav {
        margin-bottom: 1rem;
      }
      
      .navbar .d-flex {
        justify-content: center !important;
        margin-top: 0.5rem;
      }
    }
    
    /* Shop Page Styles */
    ul {
      list-style: none;
      padding: 0; 
      margin: 0; 
    }
    
    .shop-topbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }
    
    .search-form {
      display: flex;
      align-items: center;
      background-color: #f1f1f1;
      border-radius: 25px;
      overflow: hidden;
      width: 100%;
      box-shadow: 0px 4px 8px rgba(67, 67, 67, 0.1);
    }
    
    .search-input {
      flex: 1;
      padding: 8px 10px;
      font-size: 14px;
      border: none;
      outline: none;
      background-color: transparent;
    }
    
    .search-button {
      padding: 8px 15px;
      background-color: #6c757d;
      color: #fff;
      border: none;
      cursor: pointer;
      font-size: 14px;
      border-radius: 15px;
      margin-right: 5px;
      transition: background-color 0.3s, transform 0.2s;
    }
    
    .search-button:hover {
      background-color: #868686;
      transform: scale(1.05);
    }
    
    .filter-bar {
      background-color: #f9f9f9;
      padding: 15px;
      border-radius: 8px;
      margin-bottom: 20px;
      box-shadow: 0 2px 5px rgba(0,0,0,0.05);
    }
    
    .filter-dropdown {
      margin-right: 15px;
      display: inline-block;
    }
    
    .filter-dropdown .dropdown-menu {
      padding: 15px;
      min-width: 200px;
      max-height: 300px;
      overflow-y: auto;
    }
    
    .filter-dropdown .dropdown-item {
      padding: 8px 15px;
      transition: all 0.2s;
    }
    
    .filter-dropdown .dropdown-item:hover {
      background-color: #f1f1f1;
      color: #007bff;
    }
    
    .filter-dropdown .dropdown-toggle {
      padding: 8px 15px;
      border-radius: 20px;
      font-weight: 500;
    }
    
    .price-button {
      padding: 8px 15px;
      background-color: #f1f1f1;
      color: #333;
      border: 1px solid #ddd;
      border-radius: 30px;
      cursor: pointer;
      transition: background-color 0.3s, transform 0.2s;
      text-align: center;
      font-size: 14px;
      display: block;
      width: 100%;
      margin-bottom: 5px;
      text-decoration: none;
    }
    
    .price-button:hover {
      background-color: #007bff;
      color: white;
      border-color: #007bff;
    }
    
    .filter-clear-btn {
      padding: 8px 15px;
      border-radius: 20px;
      background-color: #6c757d;
      color: white;
      transition: all 0.2s;
    }
    
    .filter-clear-btn:hover {
      background-color: #5a6268;
    }
    
    .product-list-container {
      display: flex;
      flex-direction: column;
    }
    
    .pagination {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin: 20px 0;
    }
    
    .pagination a {
      padding: 8px 12px;
      background-color: #f0f0f0;
      border: 1px solid #ddd;
      color: #333;
      text-decoration: none;
    }
    
    .pagination .active {
      background-color: #007bff;
      color: #fff;
    }
    
    .page-header .page-title {
      font-weight: 900;
      font-size: 4rem;
    }
    
    .page-header.breadcrumb-wrap {
      padding: 20px;
      background-color: #f7f8f9;
    }
    
    .page-header .breadcrumb {
      display: inline-block;
      padding: 0;
      text-transform: capitalize;
      color: #6e6e6e;
      font-size: 0.875rem;
      background: none;
      margin: 0;
      border-radius: 0;
    }
    
    .page-header .breadcrumb span {
      position: relative;
      text-align: center;
      padding: 0 10px;
    }
    
    .page-header .breadcrumb span::before {
      content: "\f111";
      font-family: "uicons-regular-straight" !important;
      display: inline-block;
      font-size: 9px;
    }
    
    a {
      text-decoration: none; 
      color: inherit; 
    }
    
    @media (max-width: 768px) {
      .filter-bar {
        display: flex;
        flex-wrap: wrap;
        gap: 10px;
      }
      
      .filter-dropdown {
        margin-bottom: 10px;
        margin-right: 10px;
      }
    }
  </style>
</head>
<body>
  <!-- Navbar -->
<!-- Navbar -->
<nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm py-2 sticky-top">
  <div class="container">
    
    <!-- Logo -->
    <a class="navbar-brand me-0 me-lg-3" href="/">
      <img src="/img/logo.svg" height="40" alt="TyreX Logo">
    </a>

    <!-- Mobile Menu Button - Improved positioning and styling -->
    <button class="navbar-toggler ms-auto me-2" type="button" data-bs-toggle="collapse" data-bs-target="#navbarContent" aria-controls="navbarContent" aria-expanded="false" aria-label="Toggle navigation">
      <i class="fas fa-bars"></i>
    </button>
    
    <!-- Removed cart from here -->
    <div class="d-flex d-lg-none align-items-center">
      <% if (user) { %>
        <!-- Cart icon removed from here -->
      <% } %>
    </div>

    <!-- Navbar Content -->
    <div class="collapse navbar-collapse" id="navbarContent">
      
      <!-- Centered Menu -->
      <ul class="navbar-nav mx-auto text-center">
        <li class="nav-item"><a class="nav-link fw-medium" href="/shop">Shop Now</a></li>
        <li class="nav-item"><a class="nav-link fw-medium" href="/">Home</a></li>
      </ul>

      <!-- User Login/Logout Section -->
      <div class="d-flex align-items-center justify-content-center">
        <% if (user) { %>
          <a href="/profile" class="no-style">
            <span class="me-2 fw-bold"><%= user.name %></span>
          </a>
          <button class="btn btn-danger btn-sm rounded-circle me-2" data-bs-toggle="modal" data-bs-target="#logoutModal">
            <i class="fas fa-sign-out-alt"></i>
          </button>

          <a href="/wishlist" class="text-decoration-none text-dark position-relative ms-2">
            <i class="far fa-heart fs-5"></i>
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
              style="font-size: 0.6rem;"><%=wishlistCount%></span>
          </a>
          
          <a href="/cart" class="text-decoration-none text-dark position-relative ms-4">
            <i class="fas fa-shopping-cart fs-5"></i>
            <span class="position-absolute top-0 start-100 translate-middle badge rounded-pill bg-danger"
              style="font-size: 0.6rem;"><%=cartCount%></span>
          </a>
        <% } else { %>
          <a href="/login" class="btn btn-danger rounded-pill px-4">LOGIN</a>
        <% } %>
      </div>
    </div>
  </div>
</nav>
  
  <!-- Logout Modal -->
  <div class="modal fade" id="logoutModal" tabindex="-1" role="dialog" aria-labelledby="logoutModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="logoutModalLabel">Confirm Logout</h5>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          Are you sure you want to log out?
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
          <a href="/logout" class="btn btn-danger">Logout</a>
        </div>
      </div>
    </div>
  </div>

  <!-- Shop Page Content -->
  <div class="page-header breadcrumb-wrap">
    <div class="container">
      <!-- Top Row with Breadcrumb and Sorting -->
      <div class="row mb-3 align-items-center">
        <div class="col-md-6 col-12 mb-2 mb-md-0">
          <div class="breadcrumb">
            <a href="/home" rel="nofollow">Home&nbsp;>&nbsp;</a>
            <a href="/shop" class="active">Shop</a>
          </div>
        </div>
        <div class="col-md-6 col-12 d-flex justify-content-md-end justify-content-center">
          <div class="dropdown">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="sortingDropdown" data-bs-toggle="dropdown" aria-expanded="false">
              Sorting
            </button>
            <ul class="dropdown-menu" aria-labelledby="sortingDropdown">
              <li><a class="dropdown-item" href="/sort?sort=a-z" onclick="updateSortingText(this)">A-Z</a></li>
              <li><a class="dropdown-item" href="/sort?sort=z-a" onclick="updateSortingText(this)">Z-A</a></li>
              <li><a class="dropdown-item" href="/sort?sort=low-high" onclick="updateSortingText(this)">Low-High</a></li>
              <li><a class="dropdown-item" href="/sort?sort=high-low" onclick="updateSortingText(this)">High-Low</a></li>
            </ul>
          </div>
        </div>
      </div>
      
      <!-- Center Row with Search -->
      <div class="row justify-content-center mb-3">
        <div class="col-lg-6 col-md-8 col-sm-10">
          <form action="/search" method="POST" class="search-form w-100">
            <input type="text" name="query" placeholder="Search items..." class="search-input" />
            <button type="submit" class="search-button btn-secondary">Search</button>
          </form>
        </div>
      </div>
    </div>
  </div>

  <div class="container product-list-container">
    <!-- Filter Bar - Replaced Sidebar with Horizontal Filter Bar -->
    <div class="filter-bar d-flex align-items-center flex-wrap">
      <!-- Categories Dropdown -->
      <div class="filter-dropdown">
        <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="categoryDropdown" data-bs-toggle="dropdown" aria-expanded="false">
          Categories
        </button>
        <ul class="dropdown-menu" aria-labelledby="categoryDropdown">
          <%for(let i=0;i<category.length;i++){%>
            <li><a class="dropdown-item" href="/filter?category=<%=category[i]._id%>"><%=category[i].name%></a></li>
          <%}%>
        </ul>
      </div>
      
      <!-- Brands Dropdown -->
      <div class="filter-dropdown">
        <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="brandDropdown" data-bs-toggle="dropdown" aria-expanded="false">
          Brands
        </button>
        <ul class="dropdown-menu" aria-labelledby="brandDropdown">
          <%for(let i=0;i<brand.length;i++){%>
            <li><a class="dropdown-item" href="/filter?brand=<%=brand[i]._id%>"><%=brand[i].brandName%></a></li>
          <%}%>
        </ul>
      </div>
      
      <!-- Price Filter Dropdown -->
      <div class="filter-dropdown">
        <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="priceDropdown" data-bs-toggle="dropdown" aria-expanded="false">
          Price Range
        </button>
        <div class="dropdown-menu p-3" aria-labelledby="priceDropdown">
          <a href="/filterPrice?gt=0&lt=5000" class="price-button mb-2">Under ₹5,000</a>
          <a href="/filterPrice?gt=5000&lt=10000" class="price-button mb-2">₹5,000 - ₹10,000</a>
          <a href="/filterPrice?gt=10000&lt=15000" class="price-button mb-2">₹10,000 - ₹15,000</a>
          <a href="/filterPrice?gt=15000&lt=99999" class="price-button">Above ₹15,000</a>
        </div>
      </div>
      
      <!-- Clear Filters Button -->
      <a href="/shop" class="btn filter-clear-btn">Clear Filters</a>
    </div>

    <!-- Empty Products Notice -->
    <% if (products.length === 0) { %>
      <div class="text-center mt-5">
        <h1>😔 No products found in this category</h1>
        <p>Try exploring other categories or check back later for new arrivals.</p>
        <a href="/shop" class="btn btn-primary mt-3">Browse Other Categories</a>
      </div>
    <% } %>

    <!-- Product Grid -->
    <main class="py-4">
      <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-3"> 
        <%for(let i=0;i<products.length;i++){%>
          <div class="col-lg-3 col-md-6 col-sm-6 d-flex">
            <div class="card w-100 my-2 shadow-2-strong hover-shadow border-0 rounded-3 overflow-hidden">
              <div class="bg-light text-center">
                <a href="/details?id=<%=products[i]._id%>" class="d-block no-style">
                  <img src="/uploads/reImage/<%=products[i].productImage[0]%>" class="card-img-top p-2" style="aspect-ratio: 1 / 1; object-fit: contain;" alt="<%=products[i].productName%>">
                </a>
              </div>

              <div class="card-body d-flex flex-column p-3">
                <a href="/details?id=<%=products[i]._id%>" class="d-block no-style">
                  <h5 class="card-title text-truncate fw-bold mb-1"><%=products[i].productName%></h5>
                </a>
                <h6 class="text-muted mb-2"><%=products[i].brandId.brandName%></h6>

                <div class="d-flex align-items-center mb-3">
                  <span class="text-success fw-bold fs-5">&#8377;<%=products[i].salePrice%></span>
                  <%if(products[i].salePrice!=products[i].regularPrice){%>
                    <del class="text-muted ms-2 small">&#8377;<%= products[i].regularPrice %></del>
                  <%}%>
                  
                  <% if (products[i].salePrice!=products[i].regularPrice) { %>
                    <span class="badge bg-success ms-auto"><%= Math.round(((products[i].regularPrice - products[i].salePrice) / products[i].regularPrice) * 100)%>% OFF</span>
                  <% } %>
                </div>

                <div class="d-flex align-items-center mt-auto pt-2 border-top">
                  <button class="btn btn-primary flex-grow-1 me-2 addToCartBtn" data-id="<%= products[i]._id %>">
                    <i class="fas fa-shopping-cart me-2"></i>Add to cart
                  </button>
                  <span onclick="addToWishlist('<%= products[i]._id %>')">
                    <i class="fas fa-heart"></i>
                  </span>
                </div>
              </div>
            </div>
          </div>
        <%}%>
      </div>
    </main>
  </div>

  <!-- Pagination -->
  <div class="pagination">
    <% if (currentPage > 1) { %>
      <a class="btn btn-secondary" href="/shop?page=<%= currentPage - 1 %>">Prev</a>
    <% } %>

    <% for (let i = 1; i <= totalPages; i++) { %>
      <a class="btn btn-secondary <%= currentPage === i ? 'active' : '' %>" href="/shop?page=<%= i %>"><%= i %></a>
    <% } %>

    <% if (currentPage < totalPages) { %>
      <a class="btn btn-secondary" href="/shop?page=<%= currentPage + 1 %>">Next</a>
    <% } %>
  </div>

  <!-- Scripts - Move all scripts to the end of the body -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.7.0/jquery.min.js"></script>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous"></script>
  <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
  
  <script>
    // Document ready function
    document.addEventListener('DOMContentLoaded', function() {
      // Navbar toggle functionality
      const navbarToggler = document.querySelector('.navbar-toggler');
      const navbarCollapse = document.querySelector('#navbarContent');
      
      // Add click event listener to all nav links to close menu when clicked on mobile
      const navLinks = document.querySelectorAll('.nav-link');
      navLinks.forEach(link => {
        link.addEventListener('click', function() {
          if (window.innerWidth < 992) { // Only on mobile
            const bsCollapse = new bootstrap.Collapse(navbarCollapse);
            bsCollapse.hide();
          }
        });
      });
    });

    // Sorting dropdown functionality
    function updateSortingText(element) {
      document.getElementById("sortingDropdown").textContent = element.textContent;
    }

    // Add to cart functionality
    document.querySelectorAll(".addToCartBtn").forEach(button => {
      button.addEventListener("click", async () => {
        const productId = button.getAttribute("data-id");

        try {
          const response = await fetch(`/cart/${productId}`, {
            method: "POST",
            headers: { "Content-Type": "application/json" },
            body: JSON.stringify({ quantity: 1 }) 
          });

          const result = await response.json();

          if (result.success) {
            Swal.fire({
              icon: "success",
              title: "Product added to Cart",
              showConfirmButton: false,
              timer: 1000
            });
          } else {
            Swal.fire({
              icon: "error",
              title: "Failed to add to cart",
              text: result.message,
              showConfirmButton: false,
              timer: 1000
            });
          }
        } catch (error) {
          console.error("Error:", error);
        }
      });
    });

    // Wishlist functionality
    function addToWishlist(productId) {
      $.ajax({
        url: '/wishlist',
        method: 'POST',
        data: { productId: productId },
        success: (response) => {
          if (response.status) {
            Swal.fire({
              title: "Added to wishlist",
              text: "The product has been added to you wishlist",
              icon: "success",
              showConfirmButton: true,
              timer: 2000,
            });
          } else {
            Swal.fire({
              title: response.message,
              icon: "warning",
              timer: 2000,
            });
          }
        },
        error: (error) => {
          Swal.fire({
            title: "Already in cart",
            text: "Product already in your Cart",
            icon: "warning",
            timer: 2000,
          });
        }
      });
    }
  </script>
  
  <%- include("../partials/user/footer") %>
</body>
</html>