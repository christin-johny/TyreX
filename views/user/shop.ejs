<%- include("../partials/user/header") %>

<style>
    ul {
  list-style: none;
  padding: 0; 
  margin: 0; 
}
    .no-style {
  all: unset; 
  cursor: pointer; 
  display: inline-block; 
}

    .shop-topbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 20px;
    }
   
   
    .search-form {
      display: flex;
      align-items: center;
      background-color: #f1f1f1;
      border-radius: 25px;
      overflow: hidden;
      max-width: 250px;
      box-shadow: 0px 4px 8px rgba(67, 67, 67, 0.1);
    }
   
   
    .search-input {
      flex: 1;
      padding: 8px 10px;
      font-size: 14px;
      border: none;
      outline: none;
      background-color: transparent;
    }
   
   
    .search-button {
      padding: 8px 15px;
      background-color: #6c757d;
      color: #fff;
      border: none;
      cursor: pointer;
      font-size: 14px;
      border-radius: 15px;
      margin-right: 5px;
      transition: background-color 0.3s, transform 0.2s;
    }
   
   
    .search-button:hover {
      background-color: #868686;
      transform: scale(1.05);
    }
    .sidebar {
      padding: 20px;
      border: 1px solid #ddd;
      background-color: #f9f9f9;
      border-radius: 8px;
      margin-bottom: 20px;
      width: 250px;
      text-align: center;
    }
   
   
    .filter-section {
      margin-bottom: 20px;
    }
   
   
    .filter-title {
      font-weight: bold;
      margin-bottom: 10px;
      font-size: 16px;
      color: #333;
    }
   
   
    .filter-item {
      margin: 5px 0;
    }
   
   
    .filter-item a {
      text-decoration: none;
      color: #333;
    }
   
   
    .filter-item a:hover {
      color: #007bff;
    }
   
   
    .product-list-container {
      display: flex;
      gap: 20px;
    }
   .pagination {
      display: flex;
      justify-content: center;
      gap: 10px;
      margin: 20px 0;
    }
   
   
    .pagination a {
      padding: 8px 12px;
      background-color: #f0f0f0;
      border: 1px solid #ddd;
      color: #333;
      text-decoration: none;
    }
   
   
    .pagination .active {
      background-color: #007bff;
      color: #fff;
    }
   
   
    .price-filter {
      padding: 10px;
      background-color: #f9f9f9;
      border-radius: 8px;
      margin-top: 20px;
    }
   
   
    .price-filter .price-options {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }
   
   
    .price-button {
      padding: 12px 20px;
      background-color: #f1f1f1;
      color: #333;
      border: 1px solid #ddd;
      border-radius: 30px;
      cursor: pointer;
      transition: background-color 0.3s, transform 0.2s;
      text-align: center;
      font-size: 14px;
    }
   
   
    .price-button:hover {
      background-color: #007bff;
      color: white;
      transform: scale(1.05);
    }
   
   
    .price-button:active {
      transform: scale(0.95);
    }
   
   
    .category-brand-container {
      text-align: center;
    }
    .page-header .page-title {
  font-weight: 900;
  font-size: 4rem;
}

.page-header.breadcrumb-wrap {
  padding: 20px;
  background-color: #f7f8f9;
}

.page-header .breadcrumb {
  display: inline-block;
  padding: 0;
  text-transform: capitalize;
  color: #6e6e6e;
  font-size: 0.875rem;
  background: none;
  margin: 0;
  border-radius: 0;
}

.page-header .breadcrumb span {
  position: relative;
  text-align: center;
  padding: 0 10px;
}

.page-header .breadcrumb span::before {
  content: "\f111";
  font-family: "uicons-regular-straight" !important;
  display: inline-block;
  font-size: 9px;
}
a {
  text-decoration: none; 
  color: inherit; 
}

    
   </style>
<div class="page-header breadcrumb-wrap">
  <div class="container d-flex justify-content-between align-items-center">
    <!-- Breadcrumb -->
    <div class="breadcrumb">
      <a href="/home" rel="nofollow">Home&nbsp;>&nbsp;</a>
      <a href="/shop" class="active">Shop</a>

    </div>

    <!-- Sorting Dropdown -->
    <div class="dropdown">
      <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="sortingDropdown" data-bs-toggle="dropdown" aria-expanded="false">
        Sorting
      </button>
      <ul class="dropdown-menu" aria-labelledby="sortingDropdown">
        <li><a class="dropdown-item" href="/sort?sort=a-z" onclick="updateSortingText(this)">A-Z</a></li>
        <li><a class="dropdown-item" href="/sort?sort=z-a" onclick="updateSortingText(this)">Z-A</a></li>
        <li><a class="dropdown-item" href="/sort?sort=low-high" onclick="updateSortingText(this)">Low-High</a></li>
        <li><a class="dropdown-item" href="/sort?sort=high-low" onclick="updateSortingText(this)">High-Low</a></li>
      </ul>
    </div>
  </div>
</div>

   
   <!-- <div class="main-container container-fluid h-100 w-100 p-0 m-0">
    <section class="shop-page container-fluid h-100 w-100 p-0 m-0">
      <div class="shop-topbar">
        <div class="search-bar">
        </div>
      </div> -->
     
      <div class="product-list-container">
        <aside class="sidebar">
          <div class="filter-section">
            <a href="/shop" class="btn btn-secondary">Clear</a> 
            <div class="filter-title">Categories</div>
            <div class="category-brand-container">
              
              <ul>
                <%for(let i=0;i<category.length;i++){%>
                  <li class="filter-item">
                    <a href="/filter?category=<%=category[i]._id%>"><%=category[i].name%></a>
                  </li>
                  <%}%>
              </ul>
            </div>
          </div>
   
   
         
          <div class="filter-section">
            <div class="filter-title">Brands</div>
            <div class="category-brand-container">
              <ul>
                <%for(let i=0;i<brand.length;i++){%>
                  <li class="filter-item">
                    <a href="/filter?brand=<%=brand[i]._id%>"><%=brand[i].brandName%></a>
                  </li>
                  <%}%>
              </ul>
            </div>
          </div>
   
   
         
          <div class="price-filter">
            <div class="filter-title">Filter by Price</div>
            <form id="price-filter-form">
              <div class="price-options">
                <a href="/filterPrice?gt=0&lt=5000"><button type="button" class="price-button">Under â‚¹5,000</button></a>
                <a href="/filterPrice?gt=5000&lt=10000"><button type="button" class="price-button">â‚¹5,000 - â‚¹10,000</button></a>
                <a href="/filterPrice?gt=10000&lt=15000"><button type="button" class="price-button">â‚¹10,000- â‚¹15,000</button></a>
                <a href="/filterPrice?gt=15000&lt=99999"><button type="button" class="price-button">Above â‚¹15,000</button></a>
              </div>
            </form>
          </div>
        </aside>
        <% if (products.length === 0) { %>
          <%console.log('non');%>
          <div class="text-center mt-5">
            <h1>ðŸ˜” No products found in this category</h1>
            <p>Try exploring other categories or check back later for new arrivals.</p>
            <a href="/shop" class="btn btn-primary mt-3">Browse Other Categories</a>
          </div>
        <% } %>
        
   
        <main class="container py-5">
            <div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 g-3"> 
              <% for(let i = 0; i < products.length; i++) { %>
                <div class="col">
                  <div class="card h-100 shadow-sm border-0 rounded-3 overflow-hidden">
                    <div class="bg-light text-center">
                      <a href="/details?id=<%=products[i]._id%>" class="d-block">
                        <img src="/uploads/reImage/<%=products[i].productImage[0]%>" 
                             class="card-img-top p-2" 
                             style="aspect-ratio: 1 / 1; object-fit: contain;" 
                             alt="<%=products[i].productName%>">
                      </a>
                    </div>

                    

          
                    <div class="card-body d-flex flex-column p-3">
                      <a href="/details?id=<%=products[i]._id%>" class="text-decoration-none text-dark">
                        <h5 class="card-title fw-bold mb-1"><%= products[i].productName %></h5>
                        <h6 class="text-muted mb-2"><%= products[i].brandId.brandName %></h6>
                      </a>
          
                      <div class="d-flex align-items-center mb-3">
                        <span class="text-success fw-bold fs-5">&#8377;<%= products[i].salePrice %></span>
                        <del class="text-muted ms-2 small">&#8377;<%= products[i].regularPrice %></del>
                        <% if (products[i].productOffer > 0) { %>
                          <span class="badge bg-success ms-auto"><%= products[i].productOffer %>% OFF</span>
                        <% } %>
                      </div>
          
                      <div class="d-flex align-items-center mt-auto pt-2 border-top">
                        <button class="btn btn-primary flex-grow-1 me-2 btn-sm" onclick="addToCart('<%= products[i]._id %>')">
                          <i class="fas fa-shopping-cart me-1"></i> Add to cart
                        </button>
                        <button class="btn btn-outline-secondary rounded-circle p-2" onclick="addToWishlist('<%= products[i]._id %>')">
                          <i class="fas fa-heart"></i>
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              <% } %>
            </div>
          </main>
          
      </div>
   
   
   <!-- Pagination -->
      <div class="pagination">
        <div class="pagination">
            <% if (currentPage > 1) { %>
              <a class="btn btn-secondary" href="/shop?page=<%= currentPage - 1 %>">Prev</a>
            <% } %>
       
       
            <% for (let i = 1; i <= totalPages; i++) { %>
              <a class="btn btn-secondary <%= currentPage === i ? 'active' : '' %>" href="/shop?page=<%= i %>"><%= i %></a>
            <% } %>
       
       
            <% if (currentPage < totalPages) { %>
              <a class="btn btn-secondary" href="/shop?page=<%= currentPage + 1 %>">Next</a>
            <% } %>
          </div>
       
      </div>
     
    </section>
   </div>
   <script>
    function updateSortingText(element) {
    document.getElementById("sortingDropdown").textContent = element.textContent;
  }
   </script>
