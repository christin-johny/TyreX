      const navbarContent = document.getElementById('navbarContent');
      
      // Add click event listener with vanilla JS
      navbarToggler.addEventListener('click', function() {
        console.log('Toggle clicked');
        // Toggle the show class manually
        if (navbarContent.classList.contains('show')) {
          navbarContent.classList.remove('show');
          console.log('Hiding navbar');
        } else {
          navbarContent.classList.add('show');
          console.log('Showing navbar');
        }
      });
      
      // Backup toggle with jQuery in case there's an issue with vanilla JS
      $('#navbarToggler').on('click', function() {
        console.log('jQuery toggle clicked');
        $('#navbarContent').toggleClass('show');
      });
    });
    
    // Functions for the logout modal
    function toggleLogoutModal() {
      const modal = document.getElementById('logoutModal');
      if (modal.classList.contains('show')) {
        closeLogoutModal();
      } else {
        modal.classList.add('show');
        modal.style.display = 'block';
      }
    }
    
    function closeLogoutModal() {
      const modal = document.getElementById('logoutModal');
      modal.classList.remove('show');
      modal.style.display = 'none';
    }
  </script>
