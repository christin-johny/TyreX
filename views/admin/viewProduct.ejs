<%- include("../partials/admin/sidebar") %>
<%- include("../partials/admin/topNav") %>
<div class="container-fluid h-100 colorBlack">
    <div class="row h-100">
        <div class="col-12 h-100 d-flex align-items-center justify-content-center">
            <div class="card w-100 h-100 border-0 rounded-0">
                <div class="card-body d-flex flex-column p-4">
                    <h4 class="card-title mb-4">Edit Product</h4>
                    <form class="flex-grow-1">
                        <div class="row g-3">
                            <div class="col-md-4">
                                <label class="form-label">Product ID*</label>
                                <input type="text" class="form-control border-bottom border-secondary" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Product Name*</label>
                                <input type="text" class="form-control border-bottom border-secondary" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">SKU*</label>
                                <input type="text" class="form-control border-bottom border-secondary" required>
                            </div>
                        </div>

                        <div class="row g-3 mt-1">
                            <div class="col-md-4">
                                <label class="form-label">Brand*</label>
                                <input type="text" class="form-control border-bottom border-secondary" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Price*</label>
                                <input type="number" class="form-control border-bottom border-secondary" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Size*</label>
                                <input type="text" class="form-control border-bottom border-secondary" required>
                            </div>
                        </div>

                        <div class="row g-3 mt-1">
                            <div class="col-md-4">
                                <label class="form-label">Stock*</label>
                                <input type="number" class="form-control border-bottom border-secondary" required>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Type*</label>
                                <select class="form-select border-bottom border-secondary" required>
                                    <option value="">Select Type</option>
                                    <option value="tube">Tube</option>
                                    <option value="tubeless">Tubeless</option>
                                </select>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Warranty</label>
                                <input type="text" class="form-control border-bottom border-secondary">
                            </div>
                        </div>

                        <div class="row g-3 mt-1">
                            <div class="col-md-8">
                                <label class="form-label">Description*</label>
                                <textarea class="form-control border-bottom border-secondary" rows="3" required></textarea>
                            </div>
                            <div class="col-md-4">
                                <label class="form-label">Product Image*</label>
                                <div class="input-group">
                                    <input type="file" class="form-control border-bottom border-secondary" id="imageUpload" accept="image/*" required>
                                </div>
                                <div id="imagePreviewContainer" class="mt-2 text-center">
                                    <img id="imagePreview" class="img-fluid" style="display:none; max-height: 150px;">
                                </div>
                            </div>
                        </div>

                        <div class="row mt-3">
                            <div class="col">
                                <button type="submit" class="btn btn-dark me-2">Save Changes</button>
                                <button type="button" class="btn btn-outline-secondary">Cancel</button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>





<%- include("../partials/admin/footer") %>